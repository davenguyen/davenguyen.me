!!!
%html.no-js
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0", :name => "viewport"}/
    %meta{:content => "IE=edge,chrome=1,requiresActiveX=true", "http-equiv" => "X-UA-Compatible"}/

    %title The home of Dave Nguyen, Ruby on Rails Developer
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

    %meta{:content => "The home of Dave Nguyen, Ruby on Rails developer", :name => "description"}/

    / /// Favicons ////////
    %link{:href => "apple-touch-icon-144-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}/
    %link{:href => "favicon.png", :rel => "shortcut icon"}/

  %body
    #wrap
      #header
        .row.cv-section
          .span9
            .cv-section-title
              %h1
                Dave Nguyen
                %small Ruby on Rails Developer

          .span3
            .cv-item
              .social-media
                = mail_to 'dave@davenguyen.me' do
                  = fa_stacked_icon 'envelope inverse', base: 'square', class: 'fa-2x'
                  dave@davenguyen.me
                %br/
                = link_to 'https://github.com/davenguyen?tab=repositories', target: '_blank' do
                  = fa_stacked_icon 'github inverse', base: 'square', class: 'fa-2x'
                  github.com/davenguyen
                %br/
                = link_to 'https://www.linkedin.com/in/davehn', target: '_blank' do
                  = fa_stacked_icon 'linkedin inverse', base: 'square', class: 'fa-2x'
                  linkedin.com/in/davehn
      #content
        = yield
      #footer
        .row
          .span12
            %h4.copyright
    %a#back-to-top{:href => "#"}
      = fa_icon 'angle-up'
    %a#print{:href => "javascript:window.print()", :title => "Print the CV"}
      = fa_icon 'print'
